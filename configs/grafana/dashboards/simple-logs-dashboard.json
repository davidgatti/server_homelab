{
  "dashboard": {
    "id": null,
    "uid": "simple-logs",
    "title": "HomeLab Logs - Simple View",
    "description": "A simple, well-designed logs dashboard following Grafana best practices",
    "tags": ["homelab", "logs", "simple"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "üìã Recent Logs from All Services",
        "description": "Shows the most recent log entries from all HomeLab services. Use this panel to get an overview of system activity.",
        "type": "logs",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "dewhamvxy6adcc"
            },
            "expr": "{job=\"containerlogs\"}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 14,
          "w": 24,
          "x": 0,
          "y": 0
        },
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        }
      },
      {
        "id": 2,
        "title": "üîç Filter by Service",
        "description": "Select a specific service to view its logs",
        "type": "logs",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "dewhamvxy6adcc"
            },
            "expr": "{job=\"containerlogs\", container=\"$service\"}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 12,
          "w": 12,
          "x": 0,
          "y": 14
        },
        "options": {
          "showTime": true,
          "showLabels": false,
          "showCommonLabels": true,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "none",
          "sortOrder": "Descending"
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        }
      },
      {
        "id": 3,
        "title": "‚ö†Ô∏è Errors & Warnings Only",
        "description": "Shows only error and warning messages for quick troubleshooting",
        "type": "logs",
        "targets": [
          {
            "datasource": {
              "type": "loki",
              "uid": "dewhamvxy6adcc"
            },
            "expr": "{job=\"containerlogs\"} |~ \"(?i)(error|err|warning|warn|fail|exception|critical)\"",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 12,
          "w": 12,
          "x": 12,
          "y": 14
        },
        "options": {
          "showTime": true,
          "showLabels": true,
          "showCommonLabels": false,
          "wrapLogMessage": true,
          "prettifyLogMessage": false,
          "enableLogDetails": true,
          "dedupStrategy": "exact",
          "sortOrder": "Descending"
        },
        "fieldConfig": {
          "defaults": {},
          "overrides": []
        }
      }
    ],
    "time": {
      "from": "now-30m",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "5s",
        "10s",
        "30s",
        "1m",
        "5m",
        "15m",
        "30m",
        "1h"
      ]
    },
    "templating": {
      "list": [
        {
          "current": {
            "selected": false,
            "text": "All",
            "value": "$__all"
          },
          "datasource": {
            "type": "loki",
            "uid": "dewhamvxy6adcc"
          },
          "definition": "label_values(container)",
          "hide": 0,
          "includeAll": true,
          "label": "Service",
          "multi": false,
          "name": "service",
          "options": [],
          "query": "label_values(container)",
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query",
          "allValue": ".*"
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "builtIn": 1,
          "datasource": {
            "type": "grafana",
            "uid": "-- Grafana --"
          },
          "enable": true,
          "hide": true,
          "iconColor": "rgba(0, 211, 255, 1)",
          "name": "Annotations & Alerts",
          "type": "dashboard"
        }
      ]
    },
    "refresh": "30s",
    "schemaVersion": 37,
    "style": "dark",
    "version": 0,
    "weekStart": ""
  },
  "overwrite": true
}
