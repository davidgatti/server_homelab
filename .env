# HomeLab Environment Configuration
# Copy this file to .env and customize your settings

# Timezone
TZ=Europe/Rome

# PostgreSQL Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=password
POSTGRES_DB=default

# Network Configuration
HOMELAB_SUBNET=192.168.3.0/24
HOMELAB_GATEWAY=192.168.3.1
POSTGRES_IP=192.168.3.53
WATCHTOWER_IP=192.168.3.54
POSTGRES_BACKUP_IP=192.168.3.55
VOLUME_BACKUP_IP=192.168.3.57
PGWEB_IP=192.168.3.58

# Resource Limits
POSTGRES_MEMORY_LIMIT=1G
POSTGRES_MEMORY_RESERVATION=512M
WATCHTOWER_MEMORY_LIMIT=256M
WATCHTOWER_MEMORY_RESERVATION=128M
POSTGRES_BACKUP_MEMORY_LIMIT=512M
POSTGRES_BACKUP_MEMORY_RESERVATION=256M
VOLUME_BACKUP_MEMORY_LIMIT=512M
VOLUME_BACKUP_MEMORY_RESERVATION=256M
PGWEB_MEMORY_LIMIT=256M
PGWEB_MEMORY_RESERVATION=128M

# Watchtower Configuration
WATCHTOWER_SCHEDULE=0 0 4 * * *
WATCHTOWER_NOTIFICATIONS=shoutrrr
WATCHTOWER_NOTIFICATION_URL=

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/opt/homelab/backups
POSTGRES_BACKUP_SCHEDULE=0 2 * * *
POSTGRES_BACKUP_OPTS=-Z6 --schema-only --blobs
POSTGRES_BACKUP_KEEP_WEEKS=4
POSTGRES_BACKUP_KEEP_MONTHS=6
VOLUME_BACKUP_SCHEDULE=0 3 * * *
