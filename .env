###########################
# Homelab Environment
###########################

# Timezone and DNS
TZ=UTC
DOCKER_DNS=1.1.1.1

# External Docker network (created by bootstrap)
HOMELAB_NET_NAME=homelab
HOMELAB_SUBNET=172.24.0.0/16
HOMELAB_GATEWAY=172.24.0.1

# Enable optional groups of services
# Set at runtime via environment or here. Examples:
#   COMPOSE_PROFILES="hardware,media,games"
# By default, leave empty to start only core services.
COMPOSE_PROFILES=

# Core service IPs and MACs
SPEEDTEST_IP=172.24.0.10
SPEEDTEST_MAC=02:00:00:00:00:10

REDIS_IP=172.24.0.11
REDIS_MAC=02:00:00:00:00:11

POSTGRES_IP=172.24.0.12
POSTGRES_MAC=02:00:00:00:00:12
POSTGRES_USER=homelab
POSTGRES_PASSWORD=homelab
POSTGRES_DB=homelab

QDRANT_IP=172.24.0.13
QDRANT_MAC=02:00:00:00:00:13

N8N_IP=172.24.0.14
N8N_MAC=02:00:00:00:00:14

DOCMOST_IP=172.24.0.17
DOCMOST_MAC=02:00:00:00:00:17
DOCMOST_APP_URL=http://docmost.local
DOCMOST_APP_SECRET=replace-me-with-a-random-string
# Postgres: replace with actual host/db if external
DOCMOST_DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}
DOCMOST_REDIS_URL=redis://redis:6379

PAPERLESS_IP=172.24.0.21
PAPERLESS_MAC=02:00:00:00:00:21
PAPERLESS_DBHOST=postgres
PAPERLESS_DBUSER=${POSTGRES_USER}
PAPERLESS_DBPASS=${POSTGRES_PASSWORD}
PAPERLESS_REDIS=redis://redis:6379

# Optional hardware/media/games services (disabled unless profiles enabled)
HASS_IP=172.24.0.15
HASS_MAC=02:00:00:00:00:15

JELLYFIN_IP=172.24.0.16
JELLYFIN_MAC=02:00:00:00:00:16

YOUTUBED_IP=172.24.0.18
YOUTUBED_MAC=02:00:00:00:00:18

QUAKE3_IP=172.24.0.19
QUAKE3_MAC=02:00:00:00:00:19
QUAKE3_SERVER_NAME=Homelab Q3
QUAKE3_FRONTEND_URL=http://localhost
QUAKE3_BOT_SKILLS=2
QUAKE3_MIN_PLAYERS=2
QUAKE3_MAX_CLIENTS=8
QUAKE3_API_AUTH_USER=admin
QUAKE3_API_AUTH_PASSWORD=changeme
QUAKE3_PAK0_PATH=/path/to/pak0.pk3

CUPS_IP=172.24.0.20
CUPS_MAC=02:00:00:00:00:20

