# HomeLab Environment Configuration
# Copy this file to .env and customize your settings

# Timezone
TZ=Europe/Rome

# PostgreSQL Configuration
POSTGRES_USER=admin
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=default

# Network Configuration
HOMELAB_SUBNET=192.168.10.0/24
HOMELAB_GATEWAY=192.168.10.1
POSTGRES_IP=192.168.10.12

# Resource Limits
POSTGRES_MEMORY_LIMIT=1G
POSTGRES_MEMORY_RESERVATION=512M

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_DIR=/opt/homelab/backups
